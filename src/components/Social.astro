---
interface Props {
  platform: string;
  username: string;
}

const socialProps = Astro.props;
// const {platform, username} : Astro.props;
---

<a href={`https://www.${socialProps.platform}.com/${socialProps.username}`}>
  {socialProps.platform}
</a>

<style>
  a {
    padding: 0.5rem 1rem;
    color: white;
    background-color: #4c1d95;
    text-decoration: none;
  }
</style>
